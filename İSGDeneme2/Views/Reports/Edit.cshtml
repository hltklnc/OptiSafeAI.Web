@model İSGDeneme2.Models.Report

<h2>Rapor Düzenleme</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" name="Id" value="@Model.Id" />

    <div class="form-group">
        <label for="Title">Başlık</label>
        <input type="text" name="Title" class="form-control" value="@Model.Title" required />
    </div>

    <div class="form-group">
        <label for="CreatedBy">Oluşturan</label>
        <input type="text" name="CreatedBy" class="form-control" value="@Model.CreatedBy" required />
    </div>

    <div class="form-group">
        <label for="Content">İçerik</label>
        <textarea name="Content" class="form-control" rows="5" required>@Model.Content</textarea>
    </div>

    <button type="submit" class="btn btn-success">Güncelle</button>
</form>
